@model IEnumerable<VICO_Project.Models.Cuti>





    @{
        ViewData["Title"] = "Index";
        Layout = "_AdminLayout";

    }


    <div class="container">
        <br />
        <center> <h1> <b>Selamat Datang - Admin Libur Jaga</b></h1> </center>

        <br />

       
        <div class="container" id="containerID">
            <table class="table table-striped table-hover" id="idTableCuti">
                <thead style="background-color: #c6c2fc">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Departemen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Priode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Departemen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Priode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @*<a asp-action="Update">update</a>*@

                                @Html.ActionLink("Update", "Update", new { id = item.Id }, new { @class = "fas fa-edit", @style = "color:green" })

                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "fas fa-trash-alt", @style = "color:red" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <br />


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

