@model VICO_Project.Models.Province

@{
    ViewData["Title"] = "Create";
    Layout = "_StaffLayout";
}

<section class="get-in-touch">
    <h1 class="title">Add Form Libur Jaga</h1>
    <form class="contact-form row" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-field col-lg-6">
            <input id="name" asp-for="Name" class="input-text js-input" type="text" required>
            <label class="label" asp-for="Name">Name</label>
        </div>
        <div class="form-field col-lg-6 ">
            <input asp-for="Departemen" id="email" class="input-text js-input" type="text" required>
            <label class="label" asp-for="Departemen">Department</label>
        </div>
        <div class="form-field col-lg-6 ">
            <input id="company" class="input-text js-input" type="text" asp-for="Priode" required>
            <label class="label" asp-for="Priode">Periode</label>
        </div>
        <div class="form-field col-lg-6 ">
            <input id="phone" class="input-text js-input" type="text" asp-for="Status" required>
            <label class="label" asp-for="Status">Status</label>
        </div>
        <div class="form-field col-lg-12">
            <input id="message" class="input-text js-input" type="text" required>
            <label class="label" for="message">Message</label>
        </div>
        <div class="form-field col-lg-12">
            <input class="submit-btn" type="submit" value="Submit">
        </div>
    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
